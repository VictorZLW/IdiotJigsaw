<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:button="@null"
        android:id="@+id/btn_start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/cells"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_start_pause" />
    <ImageButton
        android:background="@drawable/end"
        android:id="@+id/imgBtn_end"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/cells"
        android:layout_marginTop="10dp"
         />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btn_start"
        android:layout_alignRight="@+id/btn_start"
        android:layout_below="@id/btn_start"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/imgV_origin"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/imgBtn_end"
        android:layout_alignRight="@id/imgBtn_end"
        android:layout_marginTop="3dp"
        />
    <RelativeLayout
        android:id="@+id/cells"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="368dp"
        android:layout_height="368dp">
        <ImageButton
            android:id="@+id/imageBtn_05"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_05"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"/>

        <ImageButton
            android:id="@+id/imageBtn_01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_01"
            android:layout_toLeftOf="@+id/imageBtn_05"
            android:layout_above="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_02"
            android:layout_alignLeft="@+id/imageBtn_05"
            android:layout_above="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_03"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_03"
            android:layout_toRightOf="@+id/imageBtn_05"
            android:layout_above="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_04"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_04"
            android:layout_toLeftOf="@+id/imageBtn_05"
            android:layout_alignTop="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_06"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_06"
            android:layout_toRightOf="@+id/imageBtn_05"
            android:layout_alignTop="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_07"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_07"
            android:layout_toLeftOf="@+id/imageBtn_05"
            android:layout_below="@+id/imageBtn_05" />

        <ImageButton
            android:id="@+id/imageBtn_08"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/teddy_08"
            android:layout_alignLeft="@+id/imageBtn_05"
            android:layout_below="@+id/imageBtn_05" />

        <ImageButton

            android:id="@+id/imageBtn_09"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/empty"
            android:layout_toRightOf="@+id/imageBtn_05"
            android:layout_below="@+id/imageBtn_05" />

    </RelativeLayout>


</RelativeLayout>